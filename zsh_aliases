## aliases
alias -- -='cd -'
alias :q='sudo -k && exit'
alias :wq='sudo -k && exit'
alias aliases='vim ~/.zshrc && . ~/.zshrc'
alias del='mv -v -- "$@" ~/.trash'
alias diff='diff --color=always'
alias fzf='fzf -m --height 40%'
alias g='hub'
alias ga='hub add'
alias gb='hub branch'
alias gcm='hub commit -v'
alias gco='hub checkout'
alias gd='hub diff'
alias gf='hub fetch'
alias git='hub'
alias gl='hub pull'
alias gp='hub push'
alias gr='hub remote'
alias gst='hub status'
alias grep='grep --color=auto'
alias l='exa -a -l'
alias la='exa -a'
alias ls='exa'
alias lsblk='lsblk -i'
alias mkbak='source "$HOME"/bin/mkbak.bash'
alias mount='mount | column -t'
alias n='nnn -c -x'
alias pydoc='pydoc3'
alias py='python3'
alias rm='rm -I'
alias sc='shellcheck'
alias t='vim ~/.TODO.txt'
alias u='sudo u; sudo -k'
alias vi='vim'
alias 'vim ~/.zsh_aliases'='vim ~/.zsh_aliases && . ~/.zshrc'
alias weechat='weechat -d ~/.config/weechat'
alias ydl='youtube-dl -x --audio-format flac'
alias zshrc='vim ~/.zshrc && . ~/.zshrc'
