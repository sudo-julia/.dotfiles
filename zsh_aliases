## aliases
alias -- -='cd -'
alias :q='sudo -k && exit'
alias :wq='sudo -k && exit'
alias aliases='nvim ~/.zshrc && . ~/.zshrc'
alias del='mv -v -- "$@" ~/.trash'
alias diff='diff --color=always'
alias finalize='git checkout master && git merge devel && git push'
alias fzf='fzf -m --height 40%'
# git aliases
alias g='git'
alias ga='git add'
alias gb='git branch'
alias gcl='gh repo clone'
alias gcm='git commit -v'
alias gco='git checkout'
alias gd='git diff'
alias gds='git diff --staged'
alias gf='git fetch'
alias git='git'
alias gpl='git pull'
alias gps='git push'
alias gr='git remote'
alias gst='git status'
alias 'git clone'='gh repo clone'
# end git aliases
alias grapejs='(cd ~/bin/extras/grapesjs && npm start)'
alias grep='grep --color=auto'
if hash exa > /dev/null; then
	alias l='exa -lg'
	alias la='exa -lag'
	alias ls='exa'
else
	alias l='ls -l'
	alias la='ls -al'
fi
alias lsblk='lsblk -ip'
alias mkbak='"$HOME"/bin/mkbak.py --height 40 -v'
alias mount='mount | column -t'
alias mpv='mpv --vo=gpu'
alias n='nnn -c -x'
alias p='pacman'
alias pactree='pactree -a'
alias pstree='pstree -A'
alias pydoc='pydoc3'
alias py='python3'
alias rg='rg -p'
alias rm='rm -I'
alias sc='shellcheck --norc'
alias sudo='sudo '
alias t='nvim ~/lib/TODO.md'
alias tmux='tmux -f "~/.config/tmux/tmux.conf"'
alias todo='rg -i "TODO"'
alias u='sudo u && sudo -k'
alias vi='nvim'
alias vim='nvim'
alias wget='wget --hsts-file="${HOME}/lib/wget-hsts"'
alias ydl='youtube-dl -x --audio-format flac'
alias zshrc='nvim ~/.zshrc && . ~/.zshrc'
