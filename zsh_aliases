## aliases
alias -- -='cd -'
alias :q='sudo -k && exit'
alias :wq='sudo -k && exit'
alias aliases='vim ~/.zshrc && . ~/.zshrc'
alias del='mv -v -- "$@" ~/.trash'
alias diff='diff --color=always'
alias fzf='fzf -m --height 40%'
# git aliases
alias g='git'
alias ga='git add'
alias gb='git branch'
alias gcm='git commit -v'
alias gco='git checkout'
alias gd='git diff'
alias gds='git diff --staged'
alias gf='git fetch'
alias git='git'
alias gl='git pull'
alias gp='git push'
alias gr='git remote'
alias gst='git status'
# end git aliases
alias grep='grep --color=auto'
if command -v exa > /dev/null; then
	alias l='exa -l'
	alias la='exa -la'
	alias ls='exa'
else
	alias l='ls -l'
	alias la='ls -al'
fi
alias lsblk='lsblk -ip'
alias mkbak='"$HOME"/bin/mkbak.py'
alias mount='mount | column -t'
alias n='nnn -c -x'
alias pactree='pactree -a'
alias pydoc='pydoc3'
alias py='python3'
alias rm='rm -I'
alias sc='shellcheck'
alias sd=/usr/bin/sd
alias sudo='sudo '
alias t='vim ~/.TODO.txt'
alias todo='rg -i "TODO"'
alias u='sudo u; sudo -k'
alias vi='vim'
alias 'vim ~/.zsh_aliases'='vim ~/.zsh_aliases && . ~/.zshrc'
alias weechat='weechat -d ~/.config/weechat'
alias ydl='youtube-dl -x --audio-format flac'
alias zshrc='vim ~/.zshrc && . ~/.zshrc'
