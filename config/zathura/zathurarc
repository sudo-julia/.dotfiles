# Set keymappings for quickly adjusting zoom
map <C-b> adjust_window best-fit
map <C-w> adjust_window width

# Enable copy to clipboard
set selection-clipboard clipboard

# Font
set font "cozettevector regular 9"

# Change around the colors
set default-bg "#1e2021"
set default-fg "#fff4e1"

set completion-bg "1e2021"
set completion-fg "#fff4e1"

set completion-group-bg "#2b2b2b"
set completion-group-fg "#fff4e1"

set completion-highlight-bg "#9e6bb8"
set completion-highlight-fg "#ffffff"

set inputbar-bg "#1e2021"
set inputbar-fg "#fff4e1"

set statusbar-bg "1e2021"
set statusbar-fg "#fff4e1"

set highlight-color "#fbd588"
set highlight-active-color "#fbc454"

# set notification colors


# zathura-specific settings
set adjust-open width
set continuous-hist-save true
set statusbar-basename true
set statusbar-home-tilde true
set window-title-page true
